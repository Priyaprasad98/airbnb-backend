<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-700 font-bold text-center mb-8">
      Here are your Favourites:
    </h2>
    <div class="flex flex-wrap justify-center gap-8">
      <% favoriteHomes.forEach(favorite => { %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 w-80">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSkzKhuuIFzLB4n7F8TBuqL4LuaOk40Gu8XIA&s" alt="<%= favorite.houseName %>" class="w-full h-48 object-cover rounded-t-xl">
          <div class="p-5">
            <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= favorite.houseName %></h3>
            <p class="text-gray-500 mb-3 flex items-center">
              <%= favorite.location %>
            </p>
            <div class="flex justify-between items-center">
              <span class="text-lg font-bold text-red-500">Rs<%= favorite.price %> / night</span>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700 font-medium"><%= favorite.rating %></span>
              </div>
            </div>
            <form action="/favorites" method="POST">
              <input type="hidden" name="action" value="remove">
              <input type="hidden" name="id" value="<%= favorite._id %>">
            <button type="submit" class="bg-red-700 hover:bg-red-800 text-white px-6 py-2 mt-2 rounded-lg shadow transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-400 font-semibold text-base">
              Remove from Favorites
            </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>