<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-4xl text-red-700 font-bold text-center mb-8">
      Here are your registered homes:
    </h2>
    <div class="flex flex-wrap justify-center gap-8">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 w-80">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSkzKhuuIFzLB4n7F8TBuqL4LuaOk40Gu8XIA&s" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-xl">
          <div class="p-5">
            <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= home.houseName %></h3>
            <p class="text-gray-500 mb-3 flex items-center">
              <%= home.location %>
            </p>
            <div class="flex justify-between items-center mb-4">
              <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700 font-medium"><%= home.rating %></span>
              </div>
            </div>
            <div class="flex text-center">
            <a href="/homes/<%= home.id%>" class="bg-blue-400 hover:bg-blue-500 text-white py-1.5 px-2 mr-3 rounded-lg shadow transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300 font-semibold text-center">Details</a>
            <%- include('../partials/favorite', {home:home}) %>
          </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>